__ready.push(function(){    $("#J_pc_link").on("click", function(e){
        if (document.cookie.indexOf("__nmj")  == -1) {
            var exp = new Date();
            exp.setTime(exp.getTime() + 30*24*60*60*1000);
            document.cookie = "__nmj=1; path=/;domain=.hupu.com;expires=" + exp.toGMTString();
        };
        window.location.href = 'https:\/\/bbs.hupu.com';
    });

    $(".hupu-m-fixed-close").on("click", function(e){
        var exp = new Date();
        exp.setTime(exp.getTime() + 24*60*60*7*1000);
        document.cookie = "__closeapp=1; path=/;domain=.hupu.com;expires=" + exp.toGMTString();
        $(".hupu-m-fixed").remove();
        $(".hupu-m").css("margin-bottom", "0");
    });

    if($(".hupu-m-fixed")){
        $(".hupu-m").css("margin-bottom", $(".hupu-m-fixed").height());
    }

    
    // 用户第一次访问
    if ($('.hupu-m-fixed').length && document.cookie.indexOf("__fixeduserfirst") == -1) {
        var exp = new Date();
        exp.setTime(exp.getTime() + 1*60*60*1000);
        document.cookie = "__fixeduserfirst=1; path=/;domain=.hupu.com;expires=" + exp.toGMTString();
    }
});window.initEvent && window.initEvent();</script></html>
